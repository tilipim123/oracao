<%= bootstrap_form_with(model: @afternoon, url: afternoon_path, local: true) do |form| %>

<% if @afternoon.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@afternoon.errors.count, "error") %> prohibited
    this afternoon from being saved:
  </h2>
  <ul>
    <% @afternoon.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
