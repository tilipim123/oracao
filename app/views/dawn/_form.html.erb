<%= bootstrap_form_with(model: @dawn, url: dawn_path, local: true) do |form| %>

<% if @dawn.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@dawn.errors.count, "error") %> prohibited
    this dawn from being saved:
  </h2>
  <ul>
    <% @dawn.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form.text_field :name, placeholder: "Nome", hide_label: true, required: true%>
<%= form.select :hour, [["Escolha um Horário", 0], ["00:00 às 00:30", "um"], ["00:30 às 01:00", "dois"], ["01:00 às 01:30", "tres"], ["01:30 às 02:00", "quatro"], ["02:00 às 02:30", "cinco"], ["02:30 às 03:00", "seis"],["03:00 às 03:30", "sete"], ["03:30 às 04:00", "oito"], ["04:00 às 04:30", "nove"], ["04:30 às 05:00", "dez"], ["05:00 às 05:30", "onze"], ["05:30 às 06:00", "doze"]], { hide_label: true, required: true, wrapper: { class: 'has-warning', data: { foo: 'bar' } } }, { class: "selectpicker" } %>
<%= form.submit "Registrar horário", class:"btn btn-primary", data: { disable_with: 'Registrando....' } %>

<% end %>